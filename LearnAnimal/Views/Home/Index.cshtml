@{
    ViewData["Title"] = "Hayvan Bilgisi ve Analiz Merkezi";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg" style="max-width: 800px; width: 90%;">
        <div class="card-body text-center">
            <h1 class="card-title mb-4">Learn Animal</h1>
            <p class="card-text text-muted">
                Hayvan isimlerinden bilgi alabilir, fotoğrafları analiz edebilir ve PDF dosyalarındaki hayvanlar hakkında bilgi edinebilirsiniz.
            </p>

            <!-- Yönlendirme Butonları -->
            <div class="row mt-4">
                <div class="col-md-4 mb-3 mb-md-0">
                    <a href="@Url.Action("AnimalInfo", "Home")" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-info-circle"></i> Hayvan Bilgisi Al
                    </a>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <a href="@Url.Action("AnalyzeImage", "Home")" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-image"></i> Fotoğraf Analizi
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("AnalyzePdf", "Home")" class="btn btn-warning btn-lg w-100 text-white">
                        <i class="bi bi-file-earmark-pdf"></i> PDF Analizi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
